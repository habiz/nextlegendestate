<%= provide(:title, @user.fname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.fname %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.properties.any? %>
    <!--h3>Properties(<%= @user.properties.count %>)</h3-->
    <ol class="microposts">
      <%= render @properties %>
    </ol>
    <%= will_paginate @properties %>
    <% end %>
  </div>
</div>
